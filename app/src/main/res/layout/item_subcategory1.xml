<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    android:background="@drawable/click_bg_change"
    android:clickable="true">

    <LinearLayout
        android:id="@+id/ll_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/img_subcategory"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_margin="2dp"
            android:scaleType="centerCrop"
            tools:src="@mipmap/ic_launcher"/>

        <TextView
            android:id="@+id/text_subcategory"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textColor="@color/gray"
            android:textSize="14sp"
            tools:text="添加菜品"/>
        <!--把TextView 的height设为match_parent, 可以避免因文本换行出现的高度不一致而错位的情况-->

    </LinearLayout>


    <ImageView
        android:id="@+id/img_discount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right|top"
        android:layout_marginRight="1dp"
        android:layout_marginTop="1dp"
        tools:src="@mipmap/discount_9_5"
        />

    <!--标识计件的货物-->
    <ImageView
        android:id="@+id/img_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left|top"
        android:layout_marginLeft="1dp"
        android:layout_marginTop="1dp"
        tools:src="@drawable/ic_launcher"
        />
</FrameLayout>

